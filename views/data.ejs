<style type="text/css">
    h2 {
        color: rgb(53, 42, 36);
        font-family: "Kanit", sans-serif;
        margin-left: 2%;
    }
    p{
        font-size: 120%;
        color: rgb(236, 238, 238);
        font-family: "Kanit", sans-serif;

    }
    .modal-header{
        background-color: tomato;
        color: white;
    }
    .modal-body{
        background-color: rgb(255, 232, 130);
    }
    .modal-content{
        background-color: rgb(255, 201, 130);
    }
    .fade {
        opacity: 0;
        -webkit-transition: opacity 1s linear;
        transition: opacity 1s linear;
    }
    h1 {
        font-family: "Kanit", sans-serif;
        margin-left: 2%;
    }
    body {
        font-size: 16px;
        font-family: "Kanit", sans-serif;
    }
    
    .w3-half img {
        margin-bottom: -6px;
        margin-top: 16px;
        opacity: 0.8;
        cursor: pointer
    }
    
    .w3-half img:hover {
        opacity: 1
    }
    
    jumbotronnn {
        margin-left: 300px;
        margin-right: 0px;
        height: 87%;
        position: fixed;
        z-index: 1;
        left: 0;
        right: 0;
        background-color: rgb(253, 145, 95);
        opacity: 0.9;
        filter: alpha(opacity=100);
    }
    * {
        box-sizing: border-box;
    }

    /* Create two equal columns that floats next to each other */
    .column {
        float: left;
        width: 35%;
        padding: 10px;
        height: 520px; /* Should be removed. Only for demonstration */
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 40%;
        border: 3px thin rgb(218, 212, 212);
    }

    th, td {
        text-align: center;
        padding: 16px;
    }

    tr:nth-child(even) {
        background-color: #792020;
        opacity: 0.6;
        filter: alpha(opacity=70);
    }
    tr:nth-child(odd) {
        background-color: #f0edea;
        opacity: 0.6;
        filter: alpha(opacity=70);
    }
</style>
